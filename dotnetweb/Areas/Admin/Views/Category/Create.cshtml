@using Models
@model Category

@{
	ViewData["Title"] = "Create";
}

<div class="card shadow border-0 mt-4 mx-auto" style="max-width:600px;">
	<div class="card-header bg-primary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Create Category</h2>
			</div>
		</div>
	</div>
	<div class="card-body">
		<form method="post">
			<div class="border p-3 mt-4">
				@* tag help for validations *@
				@* <div asp-validation-summary="All"></div> *@
				@* <div asp-validation-summary="ModelOnly"></div> *@
				<div class="mb-3 p-1">
					<label asp-for="Name" class="p-0"></label>
					<input asp-for="Name" class="form-control shadow" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="mb-3 p-1">
					<label asp-for="DisplayOrder" class="p-0"></label>
					<input asp-for="DisplayOrder" class="form-control shadow" />
					<span asp-validation-for="DisplayOrder" class="text-danger text-sm"></span>
				</div>
				<button type="submit" class="btn btn-primary my-2 form-control">Create</button>
				<a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back to List</a>
			</div>
		</form>
	</div>

</div>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}