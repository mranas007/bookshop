@using Models
@model Product

@{
	ViewData["Title"] = "Delete";
}


<div class="card shadow border-0 mt-4 mx-auto" style="max-width:600px;">
	<div class="card-header bg-primary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete Product</h2>
			</div>
		</div>
	</div>
	<div class="card-body">
		<form method="post" >
			<input asp-for="Id" hidden />

			<div class="border p-3 mt-4">
				<div class="mb-3 p-1">
					<label asp-for="Title" class="p-0"></label>
					<input asp-for="Title" disabled class="form-control shadow" />
				</div>
				<div class="mb-3 p-1">
					<label asp-for="ISBN" class="p-0"></label>
					<input asp-for="ISBN" disabled class="form-control shadow" />
				</div>
				<div class="mb-3 p-1">
					<label asp-for="Author" class="p-0"></label>
					<input asp-for="Author" disabled class="form-control shadow" />
				</div>
				<div class="mb-3 p-1">
					<label asp-for="ListPrice" class="p-0"></label>
					<input asp-for="ListPrice" disabled class="form-control shadow" />
				</div>
				<div class="mb-3 p-1">
					<label asp-for="Price" class="p-0"></label>
					<input asp-for="Price" disabled class="form-control shadow" />
				</div>
				<div class="mb-3 p-1">
					<label asp-for="Price50" class="p-0"></label>
					<input asp-for="Price50" disabled class="form-control shadow" />
				</div>
				<div class="mb-3 p-1">
					<label asp-for="Price100" class="p-0"></label>
					<input asp-for="Price100" disabled class="form-control shadow" />
				</div>
				<div class="mb-3 p-1">
					<label asp-for="Description" class="p-0"></label>
					<textarea asp-for="Description" disabled class="form-control shadow"></textarea>
				</div>

				<button type="submit" class="btn btn-danger my-2 form-control">Delete</button>
				<a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">Back to List</a>
			</div>
		</form>
	</div>
</div>
